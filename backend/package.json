{
  "name": "stock-management-app",
  "version": "1.0.0",
  "description": "Comprehensive Stock Management Application with Admin Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd ../frontend/client && npm start",
    "server": "nodemon server.js",
    "build": "npm install --prefix ../frontend/client && npm run build --prefix ../frontend/client",
    "heroku-postbuild": "npm install && npm install --prefix ../frontend/client && npm run build --prefix ../frontend/client",
    "render-build": "npm install && npm install --legacy-peer-deps --prefix ../frontend/client && npm run build --prefix ../frontend/client"
  },
  "keywords": [
    "stock",
    "management",
    "inventory",
    "admin"
  ],
  "author": "Stock Management Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "nodemon": "^3.0.1"
  }
}
